<html>
    <head>
        <title>Codeial</title>
        <link rel="stylesheet" href="/assets/home.css">
    </head>
    <body>
        <div class="Home">
            <div class="left">
            <form action="/Auth/pages/createPage" method="POST" enctype="multipart/form-data" class="MakePost">
                <div class="postText">
                <input name="name" id="" style="width: 100%;" placeholder="Name of Page ...."></input>
                <textarea name ="info" style="width: 100%; height: 50px;border-width:2px;font-size: 1.5em;border-radius: .8em; margin:10px 0px" placeholder="Write something about ur page..."></textarea>
                <button id="postImg">Add Image</button>
                </div>
                <input type="file" name="img" placeholder="hello" style="display: none;">
                <input type="submit" value="Create Page">
                </form>
            <div class="list">
                <%for(let page of pages){%>
                <div class="PageIntro">
                    <a href="/Auth/pages/<%=page.id%>" class="PageIntro">
                    <div ><img class="PageAvatar" src="<%=page.avatar%>" alt=""></div>
                    <div>
                        <h1><%=page.name%></h1>
                        <h3>About : </h3>
                        <p><%=page.info%></p>
                    </div>
                    </a>
                </div>
                <%}%>
            </div>
            </div>
        </div>

        <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.3.0/socket.io.dev.js"></script>
<script src="/assets/chatEngine.js"></script>
    </body>
</html>